# Path to this file and the parent directories
set(BPPRINT_CONFIG_PATH ${CMAKE_CURRENT_LIST_DIR})
get_filename_component(BPPRINT_PREFIX_PATH ${BPPRINT_CONFIG_PATH} DIRECTORY)
get_filename_component(BPPRINT_PREFIX_PATH ${BPPRINT_PREFIX_PATH} DIRECTORY)
get_filename_component(BPPRINT_PREFIX_PATH ${BPPRINT_PREFIX_PATH} DIRECTORY)


# The bpprint library we want to link to
find_library(BPPRINT_LIBRARY
             NAMES bpprint
             PATHS ${BPPRINT_PREFIX_PATH}/lib
             NO_DEFAULT_PATH)

# The include directory
find_path(BPPRINT_INCLUDE_PATH
          NAMES bpprint/Format.hpp
          PATHS ${BPPRINT_PREFIX_PATH}/include
          NO_DEFAULT_PATH)

# This interface library
add_library(bpprint INTERFACE)
target_include_directories(bpprint INTERFACE ${BPPRINT_INCLUDE_PATH})
target_link_libraries(bpprint INTERFACE ${BPPRINT_LIBRARY})
